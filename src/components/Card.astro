---
const { id, name, status, title, txt, img, color } =
  Astro.props;
---

<article
  class:list={[
    "p-6 rounded-2xl shadow-lg flex flex-col gap-1",
    { "col-span-2": id === "1" },
    { "col-start-3": id === "2" },
    { "col-start-4 row-span-2": id === "3" },
    { "row-start-2": id === "4" },
    {
      "row-start-2 col-start-2 col-span-2": id === "5",
    },
    {
      "bg-violet text-snowWhite": color === "violet",
    },
    {
      "bg-darkGray text-snowWhite": color === "gray",
    },
    {
      "bg-darkBlackish text-lightText ": color === "black",
    },
    {
      "bg-snowWhite text-darkText": color === "white",
    },
  ]}
>
  <div class="flex items-center gap-4">
    <img
      src={img}
      alt=`Foto ${name}`
      class="rounded-full"
    />
    <div>
      <h2 class="text-md font-bold">{name}</h2>
      <h3 class="text-sm font-light">{status}</h3>
    </div>
  </div>
  <h2 class="text-2xl font-bold">
    {title}
  </h2>
  <p class="text-md font-medium">
    {txt}
  </p>
</article>
